{{#if addPost}}
  <h3>Post your question below:</h3>
  <div>
    <form>
      <div class="form-group">
        <label for="author">Your name</label>
        {{input value=author id="author"}}
      </div>

      <div class="form-group">
        <label for="title">Name your blogpost</label>
        {{input value=title id="title"}}
      </div>

      <div class="form-group">
        <label for="image">Add an image of yourself by URL</label>
        {{input value=image id="image"}}
      </div>

      <div class="form-group">
        <label for="content">Write post here</label>
        {{input value=content id="content"}}
      </div>


      <button {{action 'save1'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'showNewPostForm'}}>Write a new post</button>
{{/if}}
